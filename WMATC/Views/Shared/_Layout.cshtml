<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WMATC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        div.HeaderBar {
            background: #4c4c4c;
            background: -moz-linear-gradient(top, #4c4c4c 0%, #595959 12%, #666666 25%, #474747 39%, #2c2c2c 50%, #000000 51%, #111111 60%, #2b2b2b 76%, #1c1c1c 91%, #131313 100%);
            background: -webkit-linear-gradient(top, #4c4c4c 0%,#595959 12%,#666666 25%,#474747 39%,#2c2c2c 50%,#000000 51%,#111111 60%,#2b2b2b 76%,#1c1c1c 91%,#131313 100%);
            background: linear-gradient(to bottom, #4c4c4c 0%,#595959 12%,#666666 25%,#474747 39%,#2c2c2c 50%,#000000 51%,#111111 60%,#2b2b2b 76%,#1c1c1c 91%,#131313 100%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#4c4c4c', endColorstr='#131313',GradientType=0 );
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WMATC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="HeaderBar" style="width:100%;">
        <div style="border:2px solid silver; border-radius:4px; background:#111111; margin:2px 10px 2px 130px; vertical-align: top; display: inline-block; min-width:100px; min-height:24px; padding:0px 3px 0px 3px; -webkit-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); -moz-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1);">
            
                @Html.ActionLink(Session["SelectedEvent"] == null ? " " : Session["SelectedEvent"].ToString(), "Index", "Events")
            
        </div>
        <div style="border:2px solid silver; border-radius:4px; background:#111111; margin:2px 10px 2px 10px; vertical-align: top; display: inline-block; min-width:100px; min-height:24px; padding:0px 3px 0px 3px; -webkit-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); -moz-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1);">
            
                @Html.ActionLink(Session["SelectedTeam"] == null ? " " : Session["SelectedTeam"].ToString(), "Index", "Teams")
            
        </div>
        <div style="border:2px solid silver; border-radius:4px; background:#111111; margin:2px 10px 2px 10px; vertical-align: top; display: inline-block; min-width:100px; min-height:24px; padding:0px 3px 0px 3px; -webkit-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); -moz-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1);">
            
                @Html.ActionLink(Session["SelectedRound"] == null ? " " : Session["SelectedRound"].ToString(), "Index", "Rounds")
            
        </div>
        <div style="border:2px solid silver; border-radius:4px; background:#111111; margin:2px 10px 2px 10px; vertical-align: top; display: inline-block; min-width:100px; min-height:24px; padding:0px 3px 0px 3px; -webkit-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); -moz-box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1); box-shadow: inset 0px 0px 5px 2px rgba(27,24,112,1);">
            
                @Html.ActionLink(Session["SelectedRoundTeamMatchup"] == null ? " " : Session["SelectedRoundTeamMatchup"].ToString(), "Index", "RoundTeamMatchups")
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-1" style="min-width:125px;">
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <h4 style="color:#cccccc; margin-left:5px">Setup</h4>
                    </div>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Events", "Index","Events")</li>
                    </ul>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Teams", "Index", "Teams")</li>
                    </ul>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Players", "Index", "Players")</li>
                    </ul>
                </div>
            </nav>

            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <h4 style="color:#cccccc; margin-left:5px">Reporting</h4>
                    </div>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Rounds", "Index", "Rounds")</li>
                    </ul>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Team Matchups", "Index", "RoundTeamMatchups")</li>
                    </ul>
                </div>
            </nav>
            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Matchups", "Index", "Matchups")</li>
                    </ul>
                </div>
            </nav>

            <nav class="navbar navbar-inverse" style="margin-bottom: 0px">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <h4 style="color:#cccccc; margin-left:5px">Publish</h4>
                    </div>
                </div>
            </nav>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Push", "Index", "Publish")</li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="container body-content col-md-5">
            @RenderBody()
            <hr />
            <footer>
                <p><br /><br /><br /><br /><br />&copy; @DateTime.Now.Year - RingDev</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>